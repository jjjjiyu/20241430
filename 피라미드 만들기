#include<stdio.h>

void main() {
    int floor;

    printf("원하시는 피라미드의 층수를 입력하세요\n");
    scanf_s("%d", &floor);

    for (int i = 0; i < floor; i++) {
        for (int j = 0; j < floor - 1; j++) {
            printf(" ");
        }
        for (int k = 0; k < 2 * i + 1; k++) {
            printf("*");
        }
        printf("\n");
    }
}
